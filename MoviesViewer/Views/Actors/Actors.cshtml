
@model IEnumerable<Actor>


@{
    ViewData["Title"] = "ActorsList"; 
}

<div class="row">
    <div class="col-md-8-offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfilePictureUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ActorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bio)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model){
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.ProfilePictureUrl" alt="@actor.ActorName" style="max-width:10vw"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => actor.ActorName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square">

                                </i>
                                Edit
                            </a>|
                            <a class="btn btn-outline-info">
                                <i class="bi bi-eye-square">

                                </i>
                                Details
                            </a>|
                            <a class="btn btn-danger text-white">
                                <i class="bi bi-trash">

                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>
    </div>
</div>


<div class="text-white" style="position:fixed; right:1.8rem; bottom:1.8rem">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">Add New</a>
</div>