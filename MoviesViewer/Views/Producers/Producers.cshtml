@model IEnumerable<Producer>


@{
    ViewData["Title"] = "Producers List";
}

<div class="row">
    <div class="col-md-8-offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.ProfilePictureUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bio)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@producer.ProfilePictureUrl" alt="@producer.Name" style="max-width:10vw" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => producer.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => producer.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square">

                                </i>
                                Edit
                            </a>|
                            <a class="btn btn-outline-info">
                                <i class="bi bi-eye-square">

                                </i>
                                Details
                            </a>|
                            <a class="btn btn-danger text-white">
                                <i class="bi bi-trash">

                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
